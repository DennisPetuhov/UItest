            android:layout_width="133dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|top"
            android:text="@string/product_det"
            android:textAppearance="@style/product_det"
            app:layout_constraintEnd_toStartOf="@+id/button_orange_basket"
            app:layout_constraintStart_toEndOf="@+id/button_details_arrow"
            app:layout_constraintTop_toTopOf="@+id/button_details_arrow" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_orange_basket"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/deteils_bag_background"
            android:backgroundTint="@color/orange"
            app:icon="@drawable/deteails_bag_button"
            app:iconPadding="0dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

